<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ListarDevelopersApi</servlet-name>
        <servlet-class>com.pauloazevedo.testegazin.ListarDevelopersApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarDeveloper</servlet-name>
        <servlet-class>com.pauloazevedo.testegazin.CadastrarDeveloper</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarDeveloper</servlet-name>
        <servlet-class>com.pauloazevedo.testegazin.BuscarDeveloper</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoverDeveloper</servlet-name>
        <servlet-class>com.pauloazevedo.testegazin.RemoverDeveloper</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarDevelopersApi</servlet-name>
        <url-pattern>/ListarDevelopersApi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarDeveloper</servlet-name>
        <url-pattern>/CadastrarDeveloper</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarDeveloper</servlet-name>
        <url-pattern>/BuscarDeveloper</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoverDeveloper</servlet-name>
        <url-pattern>/RemoverDeveloper</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
